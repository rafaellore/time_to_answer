<section class="d-flex justify-content-center align-items-center mt-5">
  <div class="w-50">
    <h1 class="h3 mb-4 text-center"><%= action_message %> Pergunta</h1>
    <% if @question.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show">
        <h4 class="mb-3">Ocorreram os seguintes erros:</h4>
        <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
      </div>
    <% end %>
    <%= form_with(model: [:admins_backoffice, @question], class: "user p-4", local: true, data: { turbo: "false" }) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :description, "Descrição da pergunta" %>
        <%= form.text_field :description, class: "form-control form-control-user mb-3", placeholder: "Descrição da pergunta", id: "Descrição da pergunta" %>
      </div>

         <div class="form-group mb-3">
            <%= form.label :subject_id %>
            <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, { class:"form-control" }) %>
      </div>

 
      <%= form.submit "Salvar", class: "btn btn-primary btn-user btn-block" %>
      <hr>
    <% end %>
  </div>
</section>
